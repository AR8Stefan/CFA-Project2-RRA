<div class="col-md-6 hire-form">

<% if flash[:notice] %>
	<div class="notice"><%= flash[:notice] %></div>
<% elsif flash[:warning] %>
	<div class="alert alert-danger"><%= flash[:warning] %></div>Ã¥
<% end %>

<h1>Is this person right for you?</h1>
	<p>Hire them.</p>

<%= simple_form_for :contact, :url => contact_path, :method => :post do |f| %>
    <%= f.input :email, placeholder: 'Please type your email here' %>
    <%= f.input :message, placeholder: 'Please type message here', :as => :text %>
    <%= f.button :submit, "Hire!" %>
<% end %>

</div>