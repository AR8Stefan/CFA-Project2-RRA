<p id="notice"><%= notice %></p>

<%= @text %>

<h1>Refugees for hire</h1>
<% if @refugees.blank? %>
  <h4>There are no refugees containing the term <%= params[:search] %>.</h4>
<% end %>

<div class="container">
  <div class="row">
    <ul class="">
      <% if user_signed_in? %>
            <li  class="col-md-6 ref-link"><%= link_to "New Refugee", new_refugee_path %></li>
      <% end %>
      <li class="col-md-5">
        <%= form_tag(refugees_path, :class => "ref-link", :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search" %>
        <%= submit_tag "Search", :name => nil %>
        <% end %>
      </li>
    </ul>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Contact Number</th>
      <th>Occupation</th>
      <th>Language</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @refugees.each do |refugee| %>
      <tr>
        <td><%= refugee.name %></td>
        <td><%= refugee.contactNumber %></td>
        <td><%= refugee.occupation %></td>
        <td><%= refugee.language %></td>
        <td><%= refugee.description %></td>
        <td><%= link_to 'View', refugee %></td>
        <td><%= link_to 'Edit', edit_refugee_path(refugee) %></td>
        <td><%= link_to 'Delete', refugee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
