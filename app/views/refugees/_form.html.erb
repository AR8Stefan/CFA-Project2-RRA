<%= simple_form_for(@refugee) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :contactNumber %>
    <%= f.input :occupation %>
    <%= f.label :English %>
    <%= f.check_box :language %>
    <%= f.input :description %>
  </div>

  <div class="field">
    Upload image
    <%= f.file_field :image %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
