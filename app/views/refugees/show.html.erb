<div class="refugee-profile">
    <p id="notice"><%= notice %></p>

    <%= link_to 'Edit', edit_refugee_path(@refugee) %> |
    <%= link_to 'Back', refugees_path %> <br>

    <%= image_tag(@refugee.image_url.to_s, :size => '250x250') %>

    <p>
      <strong>Name:</strong>
      <%= @refugee.name %>
    </p>

    <p>
      <strong>Contactnumber:</strong>
      <%= @refugee.contactNumber %>
    </p>

    <p>
      <strong>Occupation:</strong>
      <%= @refugee.occupation %>
    </p>

    <p>
      <strong>Language:</strong>
      <%= @refugee.language %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @refugee.description %>
    </p>

    <%= render 'partials/hire' %>

</div>